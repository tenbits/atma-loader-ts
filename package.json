{
  "name": "atma-loader-ts",
  "version": "1.2.0",
  "description": "TypeScript compiler for `atma-io`, `IncludeJS` and `atma-server`.",
  "author": "Alex Kit (alex.kit@atmajs.com)",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "app-bundler",
    "server": "atma server",
    "test": "atma test",
    "release": "atma bump && npm run build && git add -A && git commit -am \"bump\" && npm publish && git push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tenbits/atma-loader-ts"
  },
  "dependencies": {
    "atma-io-middleware-base": "^1.0.46",
    "atma-loader-stacktrace": "^0.1.1",
    "atma-utils": "^0.2.58",
    "memd": "^0.3.13",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "app-bundler": "^0.1.14",
    "atma": "^0.15.22",
    "atma-loader-ts": "^1.1.19"
  },
  "app-bundler": {
    "file": "src/index.ts",
    "outputMain": "index.js",
    "package": {
      "module": "commonjs",
      "commonjs": {
        "output": "simplified"
      }
    },
    "defaultExtensions": {
      "js": "ts"
    },
    "middlewares": {
      "ts": [
        "atma-loader-ts:read"
      ]
    },
    "dynamicDependencies": [
      "typescript",
      "atma-io-middleware-base"
    ]
  },
  "atma": {
    "plugins": [
      "atma-loader-ts"
    ],
    "settings": {
      "include": {
        "amd": true,
        "extentionDefault": {
          "js": "ts"
        }
      },
      "atma-loader-ts": {
        "typescript": {
          "compilerOptions": {
            "module": "AMD"
          }
        }
      }
    }
  }
}
